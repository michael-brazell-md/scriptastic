{
  "name": "scriptastic",
  "displayName": "Scriptastic",
  "description": "",
  "repository": {
    "url": "https://github.com/michael-brazell-md/scriptastic"
  },
  "publisher": "michael-brazell",
  "author": {
    "name": "Michael Brazell",
    "email": "mbrazell@protonmail.com"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:pipelines"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Scriptastic",
      "properties": {
        "scriptastic.shellExec.windows": {
          "type": "string",
          "description": "Path to the shell executable to use for script execution",
          "default": "C:\\Windows\\System32\\cmd.exe",
          "title": "Windows Shell Executable"
        },
        "scriptastic.shellExec.osx": {
          "type": "string",
          "description": "Path to the shell executable to use for script execution",
          "default": "Terminal.app",
          "title": "OSX Shell Executable"
        },
        "scriptastic.shellExec.linux": {
          "type": "string",
          "description": "Path to the shell executable to use for script execution",
          "default": "xterm",
          "title": "Linux Shell Executable"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scriptastic-explorer",
          "title": "Scriptastic",
          "icon": "media/NF.svg"
        }
      ]
    },
    "views": {
      "scriptastic-explorer": [
        {
          "id": "pipelines",
          "name": "Pipelines"
        }
      ]
    },
    "commands": [
      {
        "command": "pipelines.add",
        "title": "Add",
        "icon": "$(add)"
      },
      {
        "command": "pipelines.addScript",
        "title": "Add Script File...",
        "icon": "$(add)"
      },
      {
        "command": "pipelines.run",
        "title": "Run",
        "icon": "$(debug-start)"
      },
      {
        "command": "pipelines.stop",
        "title": "Stop",
        "icon": "$(debug-stop)"
      },
      {
        "command": "pipelines.rename",
        "title": "Rename"
      },
      {
        "command": "pipelines.remove",
        "title": "Remove"
      },
      {
        "command": "pipelines.removeDep",
        "title": "Remove Reference",
        "icon": "$(remove-close)"
      },
      {
        "command": "pipelines.moveScriptUp",
        "title": "Move Up",
        "icon": "$(arrow-up)"
      },
      {
        "command": "pipelines.moveScriptDown",
        "title": "Move Down",
        "icon": "$(arrow-down)"
      },
      {
        "command": "pipelines.openFile",
        "title": "Open File"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "pipelines.add",
          "when": "view == pipelines",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pipelines.run",
          "when": "view == pipelines && viewItem == stopped",
          "group": "inline"
        },
        {
          "command": "pipelines.run",
          "when": "view == pipelines && viewItem == stopped",
          "group": "pipeline.a"
        },
        {
          "command": "pipelines.stop",
          "when": "view == pipelines && viewItem == running",
          "group": "inline"
        },
        {
          "command": "pipelines.stop",
          "when": "view == pipelines && viewItem == running",
          "group": "pipeline.a"
        },
        {
          "command": "pipelines.addScript",
          "when": "view == pipelines && viewItem == stopped",
          "group": "inline"
        },
        {
          "command": "pipelines.addScript",
          "when": "view == pipelines && viewItem == stopped",
          "group": "pipeline.g"
        },
        {
          "command": "pipelines.removeDep",
          "when": "view == pipelines && viewItem == script",
          "group": "inline"
        },
        {
          "command": "pipelines.removeDep",
          "when": "view == pipelines && viewItem == script",
          "group": "pipeline.z"
        },
        {
          "command": "pipelines.moveScriptUp",
          "when": "view == pipelines && viewItem == script",
          "group": "inline"
        },
        {
          "command": "pipelines.moveScriptUp",
          "when": "view == pipelines && viewItem == script",
          "group": "pipeline.y"
        },
        {
          "command": "pipelines.moveScriptDown",
          "when": "view == pipelines && viewItem == script",
          "group": "inline"
        },
        {
          "command": "pipelines.moveScriptDown",
          "when": "view == pipelines && viewItem == script",
          "group": "pipeline.y"
        },
        {
          "command": "pipelines.rename",
          "when": "view == pipelines && viewItem == stopped",
          "group": "pipeline.y"
        },
        {
          "command": "pipelines.remove",
          "when": "view == pipelines && viewItem == stopped",
          "group": "pipeline.z"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/rimraf": "^3.0.0",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  }
}